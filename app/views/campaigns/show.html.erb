<div class="page-header">
  <h1>
    <%= @campaign.name %>
  </h1>
</div>

<p>
  <h4>Description</h4>
</br>
  <%= @campaign.description %>
</p>
<% if user_signed_in? %>
  <%= render 'donations/form', donation: @donation %>
<% end %>
<div class="btn-group">
  <% if admin_signed_in? %>
    <%= link_to 'Edit', edit_campaign_path(@campaign), class: "btn btn-default" %>
  <% end %>
  <%= link_to 'Back', campaigns_path, class: "btn btn-default" %>

</div>
