<p id="notice"><%= notice %></p>

<h1>Donations</h1>

<table>
  <thead>
    <tr>
      <th>Campaign</th>
      <th>Email</th>
      <th>Amount</th>
      <th>Credit card details</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @donations.each do |donation| %>
      <tr>
        <td><%= donation.campaign_id %></td>
        <td><%= donation.email %></td>
        <td><%= donation.amount %></td>
        <td><%= donation.credit_card_details %></td>
        <td><%= donation.user %></td>
        <td><%= link_to 'Show', donation %></td>
        <td><%= link_to 'Edit', edit_donation_path(donation) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Donation', new_donation_path %>
