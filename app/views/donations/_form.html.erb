
<%= form_for(@donation) do |f| %>

  <div class="form-group">
    <%= f.hidden_field :campaign_id, :value => @donation.campaign_id %>
  </div>
  <div class="form-group">
    <%= f.label :amount %><br>
    <%= f.text_field :amount, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :credit_card_details %><br>
    <%= f.text_field :credit_card_details, class: "form-control" %>
  </div>
  <br>
  <div class="form-group">
    <%= f.submit "Donate", class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
